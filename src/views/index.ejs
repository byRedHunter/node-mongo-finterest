<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Finterest</title>

		<%- include('partials/head') -%>
	</head>
	<body>
		<%- include('partials/navigation') -%>

		<div class="container p-4">
			<div class="row">
				<div class="card-columns">
					<% images.forEach(function(image) { %>
					<div class="card animate__animated animate__slideInDown">
						<img
							class="card-img-top"
							src="<%= image.path %>"
							alt="<%= image.description %>"
						/>
						<div class="card-body">
							<h5 class="text-center card-title text-warning text-uppercase">
								<%= image.title %>
							</h5>

							<p class="card-text"><%= image.description %></p>

							<p class="text-white-50 card-text">
								<%= format(image.created_at) %>
							</p>

							<a href="/image/<%= image._id %>" class="btn btn-info btn-block"
								>Vie Profile</a
							>
						</div>
					</div>
					<% }) %>
				</div>
			</div>
		</div>
	</body>
</html>
